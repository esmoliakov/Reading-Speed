@page "/"
@inject NavigationManager Navigation

<PageTitle>Start</PageTitle>
<div class="container">
    <div class="content">
        <h1 class="title">Test Your Speed Reading Skills!</h1>
        <p class="description">Challenge yourself and see how quickly you can read and understand the text.</p>
        <button class="btn btn-primary start-button" @onclick="GoToTextReading">Start reading</button>
    </div>
</div>

<style>
    .container{
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }
    .content{
        text-align: center;
        bacground: lightBlue;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .title {
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 10px;
        color: #343a40;
    }
    .description {
        font-size: 1.2rem;
        margin-bottom: 20px;
        color: #6c757d;
    }
    .start-button {
        font-size: 1.2rem;
        padding: 10px 20px;
        border-radius: 5px;
        background-color: #007bff;
        border: none;
        transition: background-color 0.3s ease;
    }

</style>

@code {

    private void GoToTextReading()
    {
        Navigation.NavigateTo("/quiz");
    }
}
